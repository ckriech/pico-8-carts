function create_player()
	p={}
	p.sprite=1
	p.y=0
	p.x=0
	p.dx=0
	p.dy=0
	p.speed=1
end

function update_player()
 p.dx=0
 p.dy=0
	if (btn(2)) then
		p.dy+=p.speed
	end
 if (btn(3)) then
		p.dy-=p.speed
	end
	if (btn(0)) then
		p.dx-=p.speed
	end
	if (btn(1)) then
		p.dx+=p.speed
	end
	
	p.x+=p.dx
	p.y-=p.dy
end

function draw_player()
 spr(p.sprite,p.x,p.y)
end
